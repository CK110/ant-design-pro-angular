{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@pro-layout": ["projects/pro-layout/src/public-api.ts"],
      "@shared": [ "src/app/shared" ],
      "@shared/*": [ "src/app/shared/*" ],
      "@core": [ "src/app/core" ],
      "@core/*": [ "src/app/core/*" ],
      "@delon/acl": [ "src/app/acl" ],
      "@delon/acl/*": [ "src/app/acl/*" ],
      "@page": [ "src/app/page" ],
      "@page/*": [ "src/app/page/*" ],
      "@env/*": [ "src/environments/*" ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
